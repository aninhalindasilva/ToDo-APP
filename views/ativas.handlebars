<main>
   <section class="tarefas">
        {{#each tarefas}}
            <div class="tarefa">
                <form action="">
                      <div>
                        <input type="checkbox" id="tarefa-{{this.id}}" onchange="completartTArefa{{this.id}}">
                        <label for="tarefa-{{this.id}}">{{this.descricao}}</label> 
                    </div>

            <button>
                <img src="/img/x-icon.png" alt="Ícone de X para excluir uma tarefa">
            </button>
            </form>
        </div>

        {{/each}}
        <div class="informacoes">
            <p>{{quantidadeTarefas}}</p>

            <div class="botoes">
                <a href="/"class="active">Todas</a>
                <a href="/ativas" class="active">Ativas</a>
                <a href="/completas">Completas</a>
            </div>
            <a href="">Limpar tarefas</a>
        </div>
   </section>

   <section class="botoes">
        <a href="/"class="active">Todas</a>
        <a href="/ativas" class="active">Ativas</a>
        <a href="/completas">Completas</a>
   </section>
</main>